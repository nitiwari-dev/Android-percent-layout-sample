<resources xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="STYLE_CONSTRAINT_PERCENT_TV">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="layout_constraintHeight_default">percent</item>
        <item name="layout_constraintWidth_default">percent</item>
    </style>

    <style name="STYLE_CONSTRAINT_BACKGROUND_TV">
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/sp_25</item>
    </style>
</resources>
